{
  "compileOnSave": false,
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": "",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "paths": {
      "@angular/*": [
        "../node_modules/@angular/*"
      ]
    },
    "lib": [
      "es7",
      "es6",
      "dom"
    ],
    "moduleResolution": "node",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "target": "es6" 
  },
  "include": [
    "./src", 
    "*"
  ],
  "exclude": [
    "node_modules",
    "jspm_packages"
  ]

}
