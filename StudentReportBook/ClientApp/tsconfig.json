    "moduleResolution": "node",
    "outDir": "./dist/out-tsc",
    "sourceMap": true,
    "target": "es6",
    "typeRoots": [ "node_modules/@types" ]
    //"types": [
    //  "jasmine",
    //  "node",
    //  "types",
    //  "core-js"
    //]
  },
    "exclude": [
      "node_modules",
      "jspm_packages"
    ]
  
}
